<p id="notice"><%= notice %></p>
<h1>Listing Devices</h1>

<table>
  <thead>
    <tr>
      <th>Device </th>
      <th>Device profile </th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @devices.each do |device| %>
      <tr>
        <td><%= link_to device.device_id, device %> </td>
        <td><%= device.device_profile.profile_name %> </td>
        <% if current_user and device.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_device_path(device) %></td>
          <td><%= link_to 'Destroy', device, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

